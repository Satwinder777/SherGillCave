<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/my_bg_color"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d8"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:background="@drawable/stroke_brown"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottomsheet_brown_stroke"
            android:elevation="@dimen/d8"
            android:padding="2dp"

            android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/pizza2"
                    android:layout_margin="@dimen/d8"
                    android:scaleType="fitXY"







                    />
<!--            <com.google.android.material.imageview.ShapeableImageView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:src="@drawable/your_image"-->
<!--                android:scaleType="centerCrop" />-->




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/d8"
                android:layout_weight="1"
                android:layout_marginVertical="@dimen/d8"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="La pinoâ€™z Pizza"
                    android:textColor="@color/black"
                    android:textSize="20sp"

                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sector 67, Mohali"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24 mins"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="20sp"
                    android:layout_weight="0.1"
                    android:background="@drawable/normal_stroke"
                    android:gravity="center"
                    android:backgroundTint="@color/my_bg_color"
                    android:textSize="10sp"
                    android:padding="6dp"

                    android:text="Delivered" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/next_icon"
                    android:gravity="center"
                    android:text="View menu"
                    android:drawableTint="@color/red"
                    android:fontFamily="@font/osc_bold1"
                    android:textSize="10sp"
                    android:textColor="@color/red" />

            </LinearLayout>

        </LinearLayout>

<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="2dp"-->
<!--            android:layout_marginVertical="@dimen/d8"-->
<!--            android:background="@color/black"-->
<!--            android:layout_margin="-18dp"/>-->

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:padding="@dimen/d8"
           >

           <TextView
               android:id="@+id/itemName"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginVertical="@dimen/d8"
               android:drawableStart="@drawable/vegetarian_sign_icon"
               android:drawablePadding="@dimen/d8"
               android:text="@string/delivery_item" />

           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/brown" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginVertical="10dp"
               android:orientation="horizontal">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="15 Feb 2023 at 7:49PM" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:drawableEnd="@drawable/next_icon"
                   android:drawablePadding="@dimen/d8"
                   android:gravity="end|center"
                   android:textColor="@color/black"

                   android:text="$149.00" />
           </LinearLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_marginBottom="@dimen/d8"
               android:background="@color/brown" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginVertical="6dp"
               android:orientation="horizontal">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginEnd="@dimen/d8"
                   android:text="Rate"
                   android:textColor="@color/red"

                   />

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:orientation="horizontal">


                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:background="@drawable/stroke_black_bg"
                       android:gravity="center"
                       android:paddingHorizontal="@dimen/d8"
                       android:paddingVertical="2dp"
                       android:text="5*"
                       android:textColor="@color/black"
                       android:textSize="10sp"

                       />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginHorizontal="5dp"
                       android:background="@drawable/stroke_black_bg"

                       android:gravity="center"
                       android:paddingHorizontal="@dimen/d8"
                       android:paddingVertical="2dp"
                       android:text="5*"
                       android:textColor="@color/black"
                       android:textSize="10sp"

                       />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:background="@drawable/stroke_black_bg"

                       android:gravity="center"
                       android:paddingHorizontal="@dimen/d8"
                       android:paddingVertical="2dp"
                       android:text="5*"
                       android:textColor="@color/black"
                       android:textSize="10sp"

                       />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginHorizontal="5dp"
                       android:background="@drawable/stroke_black_bg"

                       android:gravity="center"
                       android:paddingHorizontal="@dimen/d8"
                       android:paddingVertical="2dp"
                       android:text="5*"
                       android:textColor="@color/black"
                       android:textSize="10sp"

                       />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginEnd="40dp"
                       android:background="@drawable/stroke_black_bg"
                       android:gravity="center"
                       android:paddingHorizontal="@dimen/d8"
                       android:paddingVertical="2dp"
                       android:text="5*"
                       android:textColor="@color/black"
                       android:textSize="10sp"

                       />
               </LinearLayout>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="end"

                   android:background="@drawable/red_stroke_bg"
                   android:backgroundTint="@color/red"
                   android:drawablePadding="@dimen/d8"
                   android:gravity="end|center"
                   android:padding="6dp"
                   android:text="ReOrder"
                   android:textColor="@color/white"
                   app:drawableStartCompat="@drawable/reload_back_icon" />

           </LinearLayout>

       </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>