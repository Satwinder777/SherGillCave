<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Fragment.navigationfragment.dining.FailedPaymentBottomSheetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFF6F7"
        android:paddingTop="10dp"
        android:padding="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_ic"
            android:background="@drawable/circle_bg"
            android:backgroundTint="@color/red"
            android:layout_gravity="top"
            app:tint="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment failed\nSomething went wrong. Please try again."
            android:layout_marginHorizontal="8dp"
            android:textSize="17sp"
            />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recommended options to retry payment"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/osc_bold1"
        android:padding="20dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/stroke_brown"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/personalcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal\n****2435"
            android:drawableStart="@drawable/mastercard_icon"
            android:drawableEnd="@drawable/next_icon"
            android:drawablePadding="@dimen/d8"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/brown"
            android:layout_marginVertical="6dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select other payment method"
            android:drawableStart="@drawable/visa_card_icon"
            android:drawableEnd="@drawable/next_icon"
            android:drawablePadding="@dimen/d8"

            />
    </LinearLayout>

</LinearLayout>