<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/black"
    tools:context=".Fragment.navigationfragment.profile.PossibilityGoldFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_24"
                android:layout_marginVertical="5dp"
                android:background="@drawable/normal_stroke"
                android:backgroundTint="@color/white"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Possibility Gold"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="20sp"
                android:textAllCaps="true"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gold_img_icon"
                android:layout_marginVertical="5dp"


                android:layout_gravity="center"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Exclusive club for\n indias top Fudie"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="20sp"
                android:gravity="center"
                android:textAllCaps="true"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special Prize for you"
                android:textColor="@color/white"
                android:gravity="center"
                android:textAllCaps="true"
                android:background="@drawable/stroke_yellow"
                android:paddingVertical="4dp"
                android:paddingHorizontal="@dimen/d8"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:elevation="50dp"
                android:backgroundTint="@color/yellow"


                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/stroke_yellow"
                android:padding="@dimen/_18sdp"
                android:layout_marginTop="-15dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:elevation="@dimen/d8"
                    android:layout_marginVertical="@dimen/_18sdp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pese"
                        android:layout_gravity="center"
                        android:textColor="@color/yellow"
                        android:textSize="34sp"
                        android:textAllCaps="true"


                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="@dimen/d8"
                        android:layout_gravity="center"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pese"
                            android:textColor="@color/white"
                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="For three Months"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            />
                    </LinearLayout>
                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Join Gold"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:backgroundTint="@color/yellow"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ⭐ Gold Benefits ⭐ "
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:layout_marginVertical="@dimen/_18sdp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_yellow"
                android:layout_gravity="center"
                android:padding="@dimen/_18sdp"
                android:backgroundTint="@color/lightBlack"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bike_icon"
                    app:tint="@color/yellow"
                    android:layout_gravity="center"

                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/d8"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free Delivery"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="At all restaurant under 10Km on,\norder above 199"
                        android:textColor="@color/white"

                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</androidx.core.widget.NestedScrollView>