<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/d8"
    android:background="@drawable/normal_stroke"
    android:padding="20dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_18sdp"
        app:cardBackgroundColor="@color/red"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/pizza2"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="@dimen/d8"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pizzaNameYourTransactions"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/pizza"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/place"
            android:gravity="center"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/dashed_line"
        android:layout_marginVertical="@dimen/_18sdp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2 Mar 2023, 6:22PM"
            android:textColor="@color/black"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="$57"
            android:textColor="@color/black"
            android:gravity="end|center"
            android:drawableEnd="@drawable/next_icon"


            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/dashed_line"
        android:layout_marginVertical="@dimen/_18sdp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=" Payment failed"
            android:drawableStart="@drawable/error_icon"
            android:gravity="center_vertical"
            android:drawableTint="@color/red"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/d8"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Reload"
            android:textColor="@color/white"
            android:gravity="end|center"
            android:drawableStart="@drawable/reload_back_icon"
            android:background="@drawable/red_stroke_bg"
            android:backgroundTint="@color/red"
            android:drawablePadding="@dimen/d8"
            android:paddingHorizontal="@dimen/_18sdp"
            android:paddingVertical="8dp"



            />
    </LinearLayout>

</LinearLayout>