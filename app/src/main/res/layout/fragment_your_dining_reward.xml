<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Fragment.navigationfragment.profile.YourDiningRewardFragment">

    <ImageView
        android:id="@+id/backBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_marginVertical="5dp"
        android:background="@drawable/normal_stroke"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Dining Reward"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="20sp"
        android:textAllCaps="false"

        />


    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gif_img2_icon"
        android:layout_marginVertical="5dp"
        android:layout_gravity="center"
        tools:ignore="DuplicateIds" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We have no rewards for you, yet"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/osc_bold"

        android:textSize="18sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay your next dining bill with Zomato pay\nand get up to 100% cashback"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginVertical="@dimen/d8"
        />

</LinearLayout>