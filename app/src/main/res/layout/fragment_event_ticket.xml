<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/my_bg_color"
    tools:context=".Fragment.navigationfragment.profile.EventTicketFragment">

    <ImageView
        android:id="@+id/backBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_marginVertical="5dp"
        android:background="@drawable/normal_stroke"
        />





    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Tickets"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textAllCaps="false"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gift_card_icon"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_18sdp"
        />





    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You havenâ€™t bought any ticket yet"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textAlignment="center"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Need help? Chat with us"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/normal_card_bg"
        android:padding="8dp"
        android:layout_marginTop="40dp"
        android:drawableStart="@drawable/comment_icon"
        android:drawableEnd="@drawable/next_icon"
        android:drawablePadding="@dimen/_18sdp"
        android:gravity="center_vertical"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terms and conditions"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/normal_card_bg"
        android:padding="8dp"

        android:drawableStart="@drawable/error_icon"
        android:drawableEnd="@drawable/next_icon"
        android:drawablePadding="@dimen/_18sdp"
        android:gravity="center_vertical"
        android:layout_marginVertical="@dimen/_18sdp"

        />


</LinearLayout>