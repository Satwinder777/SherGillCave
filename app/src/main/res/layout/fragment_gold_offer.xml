<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.navigationfragment.dining.GoldOfferFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="250dp"
      android:orientation="vertical"
      android:background="@color/black"
      android:padding="20dp"
      >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <ImageView
              android:id="@+id/backBtn"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/baseline_arrow_back_24"
              android:background="@drawable/normal_card_bg"
              android:padding="5dp"/>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_gravity="center"
              android:layout_marginHorizontal="@dimen/d8"
              >

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center_vertical"
                  android:singleLine="true"
                  android:text="@string/company_place"
                  android:textColor="@color/white"
                  android:textSize="15sp"
                  android:textStyle="bold"
                  android:ellipsize="end"


                  />

              <View
                  android:layout_width="match_parent"
                  android:layout_height="4dp"
                  android:background="@drawable/dashed_line"
                  android:backgroundTint="@color/white"
                  android:layout_marginTop="5dp"/>
          </LinearLayout>
      </LinearLayout>

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="4dp"
              android:layout_marginBottom="12dp"
              android:text="Gold offers"
              android:textColor="@color/white"
              android:textSize="24sp"
              android:fontFamily="@font/osc_bold1"
              app:layout_constraintBottom_toTopOf="@+id/textView7"
              app:layout_constraintStart_toStartOf="parent"
              tools:ignore="MissingConstraints" />

          <TextView
              android:id="@+id/textView7"
              android:layout_width="180dp"
              android:layout_height="wrap_content"
              android:layout_marginStart="4dp"
              android:layout_marginBottom="16dp"
              android:text="Become a Gold member and
get up to 40% off on top resurtants"
              android:textColor="@color/white"

              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent" />

          <ImageView
              android:id="@+id/imageView5"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="64dp"
              android:elevation="@dimen/d8"
              android:src="@drawable/gif_1_"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintVertical_bias="0.504" />

          <View
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:background="@drawable/my_gradial_bg"
              app:layout_constraintBottom_toBottomOf="@+id/imageView5"
              app:layout_constraintEnd_toEndOf="@+id/imageView5"

              app:layout_constraintStart_toStartOf="@+id/imageView5"
              app:layout_constraintTop_toTopOf="@+id/imageView5"
                />
      </androidx.constraintlayout.widget.ConstraintLayout>

  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_18sdp"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingHorizontal="@dimen/d8"
            android:background="@drawable/normal_stroke"
            android:layout_marginVertical="18dp"
            android:orientation="horizontal">





            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:fontFamily="@font/osc_medium"
                android:textColorHint="@color/black"
                android:drawableStart="@drawable/search_icon1"
                android:drawableEnd="@drawable/vertical_line"
                android:drawablePadding="5dp"
                android:drawableTint="@color/black"
                android:lines="1"
                android:inputType="text"
                android:textSize="12sp"
                android:hint="Enter Your Query"/>



            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:paddingStart="@dimen/d8"
                app:tint="@color/black"
                android:src="@drawable/recorder_1_icon" />
        </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sortSheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/d8"


                android:drawableStart="@drawable/filter_icon"
                android:drawableEnd="@drawable/down_1ic"
                android:drawableTint="@color/black"

                android:gravity="bottom|center"
                android:drawablePadding="@dimen/d8"
                android:layout_gravity="center"
                android:background="@drawable/normal_card_bg"
                android:text="Sort"
                android:backgroundTint="@color/my_bg_color"

                />

            <!--                <androidx.recyclerview.widget.RecyclerView-->
            <!--                    android:id="@+id/sortrc"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:orientation="horizontal"-->
            <!--                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"-->
            <!--                    android:layout_marginRight="10dp"-->
            <!--                    tools:listitem="@layout/item_types"-->
            <!--                    android:layout_marginStart="5dp"-->
            <!--                    android:layout_gravity="center_vertical"-->


            <!--                    />
            -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:scrollbars="none">

                <!-- Place your horizontally scrollable content here -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <!-- Add child views that you want to scroll horizontally -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stroke_brown"
                        android:padding="5dp"
                        android:layout_margin="3dp"

                        android:text="Pure veg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stroke_brown"
                        android:padding="5dp"
                        android:layout_margin="3dp"
                        android:text="Fast Delivery" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stroke_brown"
                        android:padding="5dp"
                        android:layout_margin="3dp"

                        android:text="Yummy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stroke_brown"
                        android:padding="5dp"
                        android:layout_margin="3dp"
                        android:text="Fine Dinging" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stroke_brown"
                        android:padding="5dp"
                        android:layout_margin="3dp"

                        android:text="OutDoor Seeting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stroke_brown"
                        android:padding="5dp"
                        android:layout_margin="3dp"
                        android:text="Open Now" />

                    <!-- Add more items as needed -->

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_18sdp"
            >
            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="@color/brown"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAY WITH ZOMATO HERE"
                android:paddingHorizontal="@dimen/d8"
                />

            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="@color/brown"
                android:layout_gravity="center"

                />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gold_rc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:itemCount="4"
            tools:listitem="@layout/gold_offer_rc_item"/>
    </LinearLayout>

</LinearLayout>

</androidx.core.widget.NestedScrollView>