<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2E2EC"
    android:padding="10dp"
    tools:context=".Fragment.navigationfragment.delivery.PaymentMethodFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/backBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_arrow_back_24"
            android:drawablePadding="5dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:text="Bill total: $2343.25"
            android:textAlignment="center"
            tools:ignore="RtlCompat"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:fontFamily="@font/osc_medium"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="8dp"
            android:background="@drawable/payment_meth_card_bg"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recommended"
                android:drawableStart="@drawable/vertical_line_bg"
                android:drawablePadding="12dp"
                android:textColor="@color/black"
                android:fontFamily="@font/osc_medium"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bill_payed"
                android:drawableStart="@drawable/mastercard_icon"
                android:drawableEnd="@drawable/next_icon"

                android:drawablePadding="5dp"
                android:gravity="bottom"

                android:paddingHorizontal="16dp"
                android:layout_marginTop="6dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="8dp"

            android:background="@drawable/payment_meth_card_bg"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Card"
                android:textColor="@color/black"
                android:drawableStart="@drawable/vertical_line_bg"
                android:drawablePadding="12dp"
                android:fontFamily="@font/osc_medium"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Credit , Debit and ATM Cards"
                android:drawableStart="@drawable/visa_card_icon"
                android:drawableEnd="@drawable/next_icon"
                android:textColor="@color/black"

                android:drawablePadding="5dp"

                android:paddingHorizontal="16dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/osc_medium"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/stroke_brown"
                android:layout_marginStart="8dp"
                android:layout_marginVertical="8dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sedexco meal pass"
                android:drawableStart="@drawable/pay_usingcard_icon"
                android:drawableEnd="@drawable/next_icon"

                android:drawablePadding="5dp"

                android:paddingHorizontal="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/osc_medium"


                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="8dp"

            android:background="@drawable/payment_meth_card_bg"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPI"
                android:textColor="@color/black"
                android:drawableStart="@drawable/vertical_line_bg"
                android:drawablePadding="12dp"
                android:fontFamily="@font/osc_medium"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Google Pay"
                android:drawableStart="@drawable/gpay1_icon"
                android:drawableEnd="@drawable/next_icon"
                android:textColor="@color/black"

                android:drawablePadding="5dp"

                android:paddingHorizontal="16dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/osc_medium"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/stroke_brown"
                android:layout_marginStart="8dp"
                android:layout_marginVertical="8dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pay via upi"
                android:drawableStart="@drawable/union_pay_icon"
                android:drawableEnd="@drawable/next_icon"

                android:drawablePadding="5dp"

                android:paddingHorizontal="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/osc_medium"


                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="8dp"

            android:background="@drawable/payment_meth_card_bg"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wallets"
                android:textColor="@color/black"
                android:drawableStart="@drawable/vertical_line_bg"
                android:drawablePadding="12dp"
                android:fontFamily="@font/osc_medium"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paytem Wallets"
                android:drawableStart="@drawable/amazon_pay1_icon"
                android:drawableEnd="@drawable/next_icon"
                android:textColor="@color/black"

                android:drawablePadding="5dp"

                android:paddingHorizontal="16dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/osc_medium"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/stroke_brown"
                android:layout_marginStart="8dp"
                android:layout_marginVertical="8dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amazon Wallet"
                android:drawableStart="@drawable/amazon_pay_icon"
                android:drawableEnd="@drawable/next_icon"

                android:drawablePadding="5dp"

                android:paddingHorizontal="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/osc_medium"


                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="8dp"

            android:background="@drawable/payment_meth_card_bg"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NetBanking"
                android:textColor="@color/black"
                android:drawableStart="@drawable/vertical_line_bg"
                android:drawablePadding="12dp"
                android:fontFamily="@font/osc_medium"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="net banking pay"
                android:drawableStart="@drawable/bank_icon"
                android:drawableEnd="@drawable/next_icon"
                android:textColor="@color/black"
                android:gravity="center_vertical"

                android:drawablePadding="5dp"

                android:paddingHorizontal="16dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/osc_medium"

                />
