<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/my_bg_color"
    android:padding="20dp"
    tools:context=".Fragment.navigationfragment.dining.CvvVerificationFragment">


    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/normal_card_bg"
        android:elevation="@dimen/d8"
        android:padding="5dp"
        android:src="@drawable/baseline_arrow_back_24" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Cvv"
        android:gravity="center"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/osc_medium"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the 3-digit CVV for your NUPI bank\ncredit card ending with ****2343"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/osc_medium"


            />
        <in.aabhasjindal.otptextview.OtpTextView
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingVertical="5dp"
            android:textColor="@color/black"
            app:bar_height="2dp"
            app:box_margin="15dp"
            app:height="62dp"
            app:length="3"
            app:otp_box_background_active="@drawable/bg_active_otp"
            app:otp_box_background_inactive="@drawable/bg_otp_verify"
            app:otp_text_size="24dp"
            app:width="50dp"
            android:focusable="true"
            tools:ignore="MissingClass"
            android:layout_marginVertical="48dp"
            android:fontFamily="@font/osc_medium"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cvv"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="@dimen/_18sdp"
            android:fontFamily="@font/osc_medium"

            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proceed"
            android:textAllCaps="false"
            android:backgroundTint="@color/red"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:layout_marginVertical="90dp"
            android:fontFamily="@font/osc_medium"


            />


    </LinearLayout>


</FrameLayout>