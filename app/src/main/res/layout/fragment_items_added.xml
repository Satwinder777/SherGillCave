<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/p20"
    tools:context=".Fragment.navigationfragment.delivery.bottomsheetfragment.ItemsAddedFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/d8"
            android:layout_marginVertical="@dimen/d8"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Items Added"
                android:textColor="@color/black"
                android:fontFamily="@font/osc_bold1"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear All"
                android:gravity="end"
                android:textSize="10sp"
                android:layout_marginEnd="@dimen/p10"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginVertical="@dimen/p8"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/d8"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="76dp"
                    android:layout_height="66dp"
                    android:src="@drawable/pizza2"
                    android:scaleType="fitXY"
                    />

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginHorizontal="6dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sweet corn pizza"
                    android:textColor="@color/black"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 142"
                    android:textColor="@color/black"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abfd"
                    android:drawableEnd="@drawable/down_ic"
                    android:textColor="@color/black"

                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear All"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@drawable/red_stroke_bg"
                android:padding="@dimen/d8"
                android:drawableEnd="@drawable/add_icon"
                android:drawableStart="@drawable/subtract_minus_icon"
                android:layout_margin="@dimen/d8"
                android:textColor="@color/black"


                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemAdded1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingVertical="@dimen/d8"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/d8"
                android:src="@drawable/checked_bag" />
            
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="2 Item Added"
                   android:drawableEnd="@drawable/down_ic"
                   android:textColor="@color/black"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="$145 plus takes"
                   android:textColor="@color/black"

                   />
           </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:backgroundTint="@color/red"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>