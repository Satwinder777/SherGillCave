<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.navigationfragment.money.MoneyFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_18sdp"

        tools:context=".Fragment.navigationfragment.profile.EditionWalletFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <LinearLayout
                android:id="@+id/checkLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/baseline_location_on_24"
                     />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/down_1ic"
                        android:fontFamily="@font/osc_bold1"
                        android:gravity="bottom"
                        android:text="Possibility"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:ems="8"
                        android:fontFamily="@font/osc_medium"
                        android:gravity="bottom"
                        android:lines="1"
                        android:text="C-127,4th floor,phase 8 mohali"
                        android:textColor="@color/black" />
                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/languageBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/normal_stroke"
                android:scaleType="fitXY"
                android:src="@drawable/select_language"
                 />

            <TextView
                android:id="@+id/profileIcon"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_bg"
                android:backgroundTint="@color/purple_700"
                android:gravity="center"
                android:hint="dskjfhwdj"
                android:text="s"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wallet_1_icon"
            android:layout_gravity="center"
            android:paddingTop="50dp"
            android:layout_marginVertical="25dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edition Wallet"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="@font/osc_bold1"
            android:textSize="22sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seamless one-click checkout for all payments on
zomato"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/d8"
            android:gravity="center"
            android:fontFamily="@font/osc_medium"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/activatemywallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activate Wallet"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:backgroundTint="@color/red"
            android:layout_marginTop="@dimen/_18sdp"
            android:fontFamily="@font/osc_medium"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/flash_icon"
                android:layout_margin="@dimen/d8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="One-click checkout"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/osc_medium"
                    android:textSize="16sp"


                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No need to wait for OTPs - payments\nget processed instantly"
                    android:textStyle="bold"
                    android:fontFamily="@font/osc_medium"
                    android:textSize="12sp"

                    />        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/d8"
                android:src="@drawable/guard_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Safe and Secure"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:fontFamily="@font/osc_medium"
                    android:textSize="16sp"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="No need to wait for OTPs - payments\nget processed instantly"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:fontFamily="@font/osc_medium"
                    android:textSize="12sp"


                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>