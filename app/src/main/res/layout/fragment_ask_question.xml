<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="@color/my_bg_color"
    android:orientation="vertical"
    tools:context=".Fragment.navigationfragment.profile.AskQuestionFragment">

    <ImageView
        android:id="@+id/backBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_marginVertical="5dp"
        android:background="@drawable/normal_stroke"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Events"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textAllCaps="false"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/askedquesEventrc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/asked_ques_event_item_rc"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

</LinearLayout>