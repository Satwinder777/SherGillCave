<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZomatoPbs" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
<!--        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialogTheme</item>-->

        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/TopRoundedBottomSheetDialog</item>
        <item name="cardViewStyle">@style/mycardtheme</item>
<!--        <item name="bottomSheetDialogTheme" tools:ignore="DuplicateDefinition">@style/TopRoundedBottomSheetStyle</item>-->

    </style>




    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:background">@drawable/bottomsheet_bg</item>
    </style>


    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:windowIsFloating">true</item>
        <!-- Customize other attributes as needed -->
    </style>

    <style name="ShapeAppearanceOverlay.App.Corner16" parent="">
        <item name="cornerFamily">rounded</item> <!-- You can also use "cut" or "topRightCut" etc. -->
        <item name="cornerSize">16dp</item> <!-- Adjust the corner radius as needed -->
    </style>

    <style name="RoundedDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_rounded_background</item>
    </style>
    <style name="TopRoundedBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TopRoundedBottomSheetStyle</item>
    </style>

    <style name="TopRoundedBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_bg</item>
    </style>
    <style name="SmallText">
        <item name="android:textSize">12sp</item> <!-- Adjust the size as needed -->
    </style>
    <style name="TabTextStyle">                 //tablayout text apperience
        <item name="android:textSize">10sp</item> <!-- Adjust the text size as per your requirement -->
    </style>

